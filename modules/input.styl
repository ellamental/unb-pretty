// TODO(nick): This mixin only works with fixed-width input boxes.  Percentage
//             widths do not work.
//
$text-field {
    display: inline-block;
    width: 200px;
    padding: 10px 0;
    margin: $padding.lg $padding.md;
    border: none;
    border-bottom: solid 1px $color.grey;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 96%, $color.primary 4%);
    /* background-position: -(@width) 0; */
    /* background-size: @width 100%; */
    background-position: -200px 0;
    background-size: 200px 100%;
    background-repeat: no-repeat;
    transition: background 0.3s cubic-bezier(0.64, 0.09, 0.08, 1);

    &:focus {
        border-color: $color.primary;
        box-shadow: none;
        outline: none;
        background-position: 0 0;
    }

    &:focus {
        +placeholder() {
            color: $color.primary;
            font-size: 0.75rem;
            transform: translateY(-20px);
            visibility: visible !important;
        }
    }

    // Chrome on iOS adds some kind of border-radius to ``input`` fields.  The
    // styles below don't fix it, but I'm leaving this here as a reminder.
    //
    // &[type="text"] {
    //     border-radius: 0;
    // }
}
